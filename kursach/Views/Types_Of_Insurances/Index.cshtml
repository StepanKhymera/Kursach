@model IEnumerable<kursach.Models.Types_Of_Insurance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AveragePricePerYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageRisk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageCoverage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AveragePricePerYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageRisk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageCoverage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InsuranceTypeCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InsuranceTypeCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InsuranceTypeCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
