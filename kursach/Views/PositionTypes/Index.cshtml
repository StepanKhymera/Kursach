@model IEnumerable<kursach.Models.PositionType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PositionTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PositionTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PositionTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
